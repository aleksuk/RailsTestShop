<h1> Products </h1>

<% @products.each do |product| %>
    <div class="product">
        <%= link_to product.name, product_path(product) %>
        <span>$<%= product.price %></span>
        <span><%= product.description %></span>
        <%= link_to 'Add to cart', cart_path(:id => product.id), method: :patch %>
    </div>
<% end %>

<br />

<%= will_paginate @products %>


